generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Activity {
  id          Int      @id @default(autoincrement())
  userId      Int
  description String
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

model Course {
  id             Int              @id @default(autoincrement())
  title          String
  description    String
  category       String
  createdAt      DateTime         @default(now())
  CourseProgress CourseProgress[]
}

model CourseProgress {
  id       Int    @id @default(autoincrement())
  userId   Int
  courseId Int
  progress Int    @default(0)
  Course   Course @relation(fields: [courseId], references: [id])
  user     User   @relation(fields: [userId], references: [id])
}

model Simulator {
  id                Int                 @id @default(autoincrement())
  title             String
  description       String
  SimulatorProgress SimulatorProgress[]
}

model SimulatorProgress {
  id          Int       @id @default(autoincrement())
  userId      Int
  simulatorId Int
  bestScore   Int       @default(0)
  Simulator   Simulator @relation(fields: [simulatorId], references: [id])
  user        User      @relation(fields: [userId], references: [id])
}

model User {
  id                Int                 @id @default(autoincrement())
  name              String
  email             String              @unique
  password          String? // ← para login seguro
  role              String              @default("student") // ← roles: admin | student
  createdAt         DateTime            @default(now())
  courseProgress    CourseProgress[]
  simulatorProgress SimulatorProgress[]
  Activity          Activity[] // ← relación inversa necesaria
}

model ContactMessage {
  id        String   @id @default(cuid())
  nombre    String
  email     String
  motivo    String
  mensaje   String
  createdAt DateTime @default(now())
}
